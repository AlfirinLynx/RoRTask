<%= form_for(@wagon) do |f| %>
  <%= render 'common/errors', resource: @wagon %>

  <div class="field">
    <%= f.label :number, "Номер" %><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
  <%= f.label :wagon_type, "Тип вагона:" %>
  <%= f.select :wagon_type,  [['Плацкартный', 'reserved'], ['Купейный', 'compartment']] %>
  </div>


  <div class="field">
    <%= f.label :lower_seats, "Число нижних мест" %><br>
    <%= f.number_field :lower_seats %>
  </div>


  <div class="field">
    <%= f.label :upper_seats, "Число верхних мест" %><br>
    <%= f.number_field :upper_seats %>
  </div>
  
  
  <div class="field">
  <%= f.label :train, "Добавить в состав поезда:" %>
  <%= f.collection_select :train_id, Train.all, :id, :number, include_blank: "-" %>
  </div>

  <div class="actions">
    <%= f.submit "#{ @wagon.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
